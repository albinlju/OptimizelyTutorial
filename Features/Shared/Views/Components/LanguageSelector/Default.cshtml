@model OptimizelyTutorial.Features.Shared.ViewModels.LanguageSelectorViewModel

@foreach (var language in Model.Languages)
{
    if (!string.Equals(Model.PreferredLanguage,
    language.LanguageID, StringComparison.InvariantCultureIgnoreCase))
    {
        <a class="rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-4 py-2 bg-white text-black hover:bg-gray-100  border-2 border-transparent" href="@(string.Equals("sv", language.LanguageID) ? "/" : language.Culture)">@language.Name</a>
    }
}

